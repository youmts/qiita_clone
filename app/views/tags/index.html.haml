%h1 人気のタグ

%table.table
  %tbody
    - @tags.each do |tag|
      %tr
        %td= tag.name
        %td= tag.taggings_count
        %td
          - if current_user.tags.include?(tag)
            = link_to "解除", remove_tag_path(tag), method: :delete
          - else
            = link_to "フォロー", add_tag_path(tag), method: :post

= raw pagy_bootstrap_nav(@pagy)
